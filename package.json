{
  "name": "odoo-update-restart-on-save",
  "displayName": "odoo-update-restart-on-save",
  "description": "",
  "version": "0.0.1",
  "publisher": "TruongTran0813",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "odoo-update-restart-on-save.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.odooUpdateRestartOnSave.enable",
        "title": "Save and Run Ext : Enable"
      },
      {
        "command": "extension.odooUpdateRestartOnSave.disable",
        "title": "Save and Run Ext : Disable"
      },
      {
        "command": "odoo-update-restart-on-save.clickStatusBar",
        "title": "Change Configuration"
      }
    ],
    "configuration": {
      "title": "Save & Run command configuration.",
      "type": "object",
      "properties": {
        "odooUpdateRestartOnSave": {
          "type": "object",
          "properties": {
            "python": {
              "type": "string",
              "default": ""
            },
            "bin": {
              "type": "string",
              "default": ""
            },
            "config": {
              "type": "string",
              "default": ""
            },
            "database": {
              "type": "string",
              "default": ""
            },
            "addonsPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                ""
              ]
            },
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "match": {
                    "type": "string",
                    "description": "Regex for matching files to run commands on.",
                    "default": ".*"
                  },
                  "notMatch": {
                    "type": "string",
                    "description": "Regex for matching files *not* to run commands on.",
                    "default": ".*"
                  },
                  "cmd": {
                    "type": "string",
                    "description": "Command to execute on save.",
                    "default": "echo ${file}"
                  },
                  "isAsync": {
                    "type": "boolean",
                    "description": "Run command asynchronously.",
                    "default": false
                  },
                  "isShellCommand": {
                    "type": "boolean",
                    "description": "Run command in terminal.",
                    "default": true
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TruongTran0813/odoo-update-restart-on-save"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "mkdirp dist && vsce package -o dist/ext.vsix --yarn",
    "deploy:local": "yarn package && code --install-extension dist/ext.vsix --force"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@types/ejs": "^3.1.2"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "copy-paste": "^1.3.0",
    "@bendera/vscode-webview-elements": "^0.14.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "ejs": "^3.1.9",
    "vscode-languageclient": "^8.1.0",
    "untildify": "^5.0.0"
  }
}
